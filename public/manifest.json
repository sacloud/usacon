{
  "name": "UsaCon",
  "manifest_version": 2,
  "version": "0.0.1",
  "description": "A browser extension for using SakuraCloud CLI in the control panel",
  "icons": {
    "128": "icon_128.png"
  },
  "permissions": ["https://secure.sakura.ad.jp/cloud/iaas*"],
  "content_scripts" : [
    {
      "matches": [ "https://secure.sakura.ad.jp/cloud/iaas*" ],
      "js": ["content.bundle.js"]
    }
  ],
  "background": {
    "scripts": ["background.bundle.js"],
    "persistent": false
  },
  "page_action": {
    "browser_style": true,
    "default_icon": "icon_128.png",
    "default_title": "UsaCon"
  },
  "web_accessible_resources": [
    "usacloud.wasm",
    "uutils.wasm",
    "jq.wasm",
    "worker.bundle.js",
    "usacloud-horizontal.svg"
  ]
}
